try: from cmu_cs3_graphics import *
except: from cmu_graphics import *


def drawButton1(msg, left, top, length=100, height=50, color = rgb(169, 191, 241), fontSize =14, hover = False):
    centerX = left+length/2
    centerY = top+height/2
    if not hover:
        drawRect(left,top, length, height, fill = None, borderColor = color)
        drawLabel(msg, centerX, centerY, fill = color,fontSize =14)
    else:
        drawRect(left,top, length, height, fill = color, borderColor = color)
        drawLabel(msg, centerX, centerY, fill = 'white',fontSize =14)